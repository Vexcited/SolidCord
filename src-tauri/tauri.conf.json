{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SolidCord",
    "version": "0.0.6"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://discord.com/api/*",
          "https://discordversion.voidfill.cc"
        ]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "requestUserAttention": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "SocialNetworking",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.github.vexcited.solidcord",
      "longDescription": "A fast and open-source web client for Discord that is made with performance in mind.",
      "shortDescription": "A fast and open-source web client for Discord.",
      "targets": [
        "deb",
        "nsis",
        "app",
        "updater"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Vexcited/SolidCord/releases/download/latest/updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFMjVGQzNCNTg0RDJBMzAKUldRd0trMVlPL3dsL2pKbWE3TUFkdVJOcldJRVBDNlNzcmJHRVh0QzhNNjNSc21uejdoK2psYU4K"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "visible": true,
        "center": true,
        "focus": true,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "title": "SolidCord",
        "width": 1280,
        "height": 720,
        "minWidth": 940,
        "minHeight": 500
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    }
  }
}